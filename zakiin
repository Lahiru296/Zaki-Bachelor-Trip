  <script>
    // ======= Quick configuration =======
    const YEAR = (new Date()).getFullYear(); // Change if needed (e.g., 2026)

    // ======= Light/Dark mode =======
    const modeToggle = document.getElementById('modeToggle');
    const root = document.documentElement;
    const storedMode = localStorage.getItem('mode');
    if (storedMode === 'light') { root.classList.add('light'); modeToggle.checked = true; }
    modeToggle.addEventListener('change', () => {
      root.classList.toggle('light', modeToggle.checked);
      localStorage.setItem('mode', modeToggle.checked ? 'light' : 'dark');
    });

    // ======= Year + countdown =======
    document.getElementById('heroYear').textContent = YEAR;
    const startDate = new Date(`${YEAR}-08-28T00:00:00`);
    const endDate   = new Date(`${YEAR}-09-04T23:59:59`);
    const cd = document.getElementById('countdown');
    const now = new Date();
    if (now < startDate) {
      const ms = startDate - now;
      const days = Math.ceil(ms / (1000*60*60*24));
      cd.textContent = `Starts in ${days} day${days!==1?'s':''}`;
    } else if (now > endDate) {
      cd.textContent = 'Trip finished ‚Äî great success ü•≥';
    } else {
      cd.textContent = 'Trip in progress ‚Äî send it!';
    }

    // ======= City filter =======
    document.querySelectorAll('.quick .btn').forEach(btn => {
      const city = btn.dataset.filter;
      if (!city) return;
      btn.addEventListener('click', () => {
        document.querySelectorAll('#itinerary .day').forEach(card => {
          card.classList.toggle('hide', city !== 'all' && card.dataset.city !== city);
        });
      });
    });

    // ======= Share (if supported) =======
    document.getElementById('shareBtn').addEventListener('click', async () => {
      const shareData = { title: document.title, text: 'Zaki‚Äôs Thailand Bachelor Trip ‚Äî itinerary', url: location.href };
      if (navigator.share) {
        try { await navigator.share(shareData); } catch { /* ignored */ }
      } else {
        navigator.clipboard.writeText(shareData.url);
        alert('Link copied to clipboard!');
      }
    });

    // ======= Calendar (.ics) generator =======
    // Times are approximate & in Asia/Bangkok (UTC+7). Adjust as needed.
    function icsDate(dt) {
      const pad = n => String(n).padStart(2, '0');
      return (
        dt.getFullYear() +
        pad(dt.getMonth()+1) +
        pad(dt.getDate()) + 'T' +
        pad(dt.getHours()) + pad(dt.getMinutes()) + '00'
      );
    }

    function makeEvent({title, location, start, end, notes=''}) {
      const uid = Math.random().toString(36).slice(2) + '@zaki-trip';
      return [
        'BEGIN:VEVENT',
        'UID:' + uid,
        'DTSTAMP:' + icsDate(new Date()),
        'SUMMARY:' + title,
        location ? ('LOCATION:' + location) : '',
        'DTSTART;TZID=Asia/Bangkok:' + icsDate(start),
        'DTEND;TZID=Asia/Bangkok:' + icsDate(end),
        notes ? ('DESCRIPTION:' + notes.replace(/[\n\r]/g, ' ')) : '',
        'END:VEVENT'
      ].filter(Boolean).join('\n');
    }

    function downloadICS(filename, text) {
      const file = new Blob([text], {type: 'text/calendar'});
      const url = URL.createObjectURL(file);
      const a = document.createElement('a');
      a.href = url; a.download = filename; a.click();
      setTimeout(() => URL.revokeObjectURL(url), 1000);
    }


    // ======= Populate weekday labels to match given dates =======
    // (Helps if YEAR changes.)
    document.querySelectorAll('.day').forEach(card => {
      const [mm, dd] = card.dataset.date.split('/').map(s => parseInt(s, 10));
      const dt = new Date(YEAR, mm-1, dd);
      const weekday = dt.toLocaleDateString(undefined, { weekday: 'short' });
      const title = card.querySelector('.date');
      title.innerHTML = `${weekday} ‚Ä¢ ${dd} ${dt.toLocaleDateString(undefined, { month: 'short' })} ‚Äî <strong>${card.dataset.city}</strong>`;
    });
